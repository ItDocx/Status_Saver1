<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookActivity">

    <RelativeLayout
        android:id="@+id/headerFacebook"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_facebook"
            android:layout_centerInParent="true"
            android:id="@+id/FacebookLogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Facebook"
            android:textSize="30sp"
            android:layout_below="@id/FacebookLogo"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:layout_below="@id/headerFacebook">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Paste Url here"
            android:textStyle="italic"
            android:textSize="20sp"
            android:background="@null"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/edttxtUrlFacebook"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_700"
            android:layout_below="@+id/edttxtUrlFacebook"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:layout_below="@id/edttxtUrlFacebook"
            android:textAllCaps="false"
            android:id="@+id/btnFacebookdwnld"/>

        <Button
            android:id="@+id/btnWhatsappPaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edttxtUrlFacebook"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/btnFacebookdwnld"
            android:text="Paste Url"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>


</layout>