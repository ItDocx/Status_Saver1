<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WhatsappActivity"
    >

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/whatsapp_logo"
            android:layout_centerInParent="true"
            android:id="@+id/whatsappLogo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whatsapp_color"
            android:text="Whatsapp"
            android:textSize="30sp"
            android:layout_below="@id/whatsappLogo"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerWhatsapp"
        android:orientation="vertical">


        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tablayout"
            app:tabGravity="fill"
            android:elevation="3dp"
            android:background="@drawable/tab_rect"
            android:layout_margin="10dp"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/black"
            app:tabTextAppearance="@style/TabLayout"/>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pagerWhatsapp"/>

    </LinearLayout>
    </RelativeLayout>
    <!--</ScrollView>-->
</layout>